{
  "name": "jerseymaker",
  "productName": "OOTP Jersey Maker",
  "version": "0.1.2",
  "description": "OOTP Jersey Maker",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": {
    "name": "Eriq Jaffe",
    "email": "eriqjaffe@gmail.com",
    "url": "https://github.com/eriqjaffe/OOTP-Jersey-Maker"
  },
  "license": "ISC",
  "dependencies": {
    "archiver": "^5.3.0",
    "electron-store": "^8.0.1",
    "express": "^4.17.1",
    "imagemagick-cli": "^0.5.0",
    "jimp": "^0.16.1",
    "node-font2base64": "^0.7.1",
    "ttfinfo": "^0.2.0"
  },
  "packageManager": "yarn@3.1.0",
  "devDependencies": {
    "electron": "^17.1.0",
    "electron-builder": "^22.14.5"
  },
  "build": {
    "appId": "com.ootputilities.jerseymaker",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "portable": {
      "artifactName": "${productName}_${version}_portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "artifactName": "${productName} ${version} setup.${ext}",
      "menuCategory": "OOTP Utilities",
      "shortcutName": "${productName}",
      "include": "build/installer.nsh",
      "uninstallDisplayName": "${productName} ${version}",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "tar.gz"
      ]
    },
    "deb": {}
  }
}
